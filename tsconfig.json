{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
